/*********************************************************************
*
*      TargetReset
*
* Function description
*   Replaces the default target device reset routine. Optional.
*
* Notes
*   This example demonstrates the usage when
*   debugging an application in RAM on a Cortex-M target device.
*
**********************************************************************
*/
void TargetReset (void) {
  // 1. Log info
  Util.Log("MSPM0: Executing Software System Reset (AIRCR)...");

  // 2. Trigger System Reset via AIRCR register (0xE000ED0C)
  // Value 0x05FA0004 = VECTKEY | SYSRESETREQ
  Target.WriteU32(0xE000ED0C, 0x05FA0004);

  // 3. Wait for reset to happen (100ms)
  Util.Sleep(100);

  // 4. Re-establish J-Link connection (DAP might have reset)
  JLINK_Connect();

  // 5. Manually set PC and SP from Vector Table
  // This fixes the "failed to set up entry point PC" error
  unsigned int SP = Target.ReadU32(0x00000000);
  unsigned int PC = Target.ReadU32(0x00000004);

  Target.SetReg("SP", SP);
  Target.SetReg("PC", PC);

  Util.LogWithNum("Reset Complete. PC set to: ", PC);
}

